<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.starbucks.controller_fx.ReportController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 24pt;" text="THỐNG KÊ DOANH SỐ SẢN PHẨM" />
            <Label fx:id="reportDateLabel" text="Báo cáo ngày: (Loading...)" style="-fx-font-size: 14pt;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10.0">
            <TableView fx:id="productSalesTable" prefHeight="400.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="productNameCol" prefWidth="250.0" text="Tên Sản Phẩm" />
                    <TableColumn fx:id="quantityCol" prefWidth="150.0" text="Số Lượng Bán" />
                    <TableColumn fx:id="totalSalesCol" prefWidth="200.0" text="Tổng Doanh Thu (VND)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16pt;" text="TỔNG DOANH THU HÔM NAY:" />
                <Label fx:id="dailyTotalLabel" style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: green;" text="0 VND" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
            <Button onAction="#handleFinalizeDailyReport" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #ffcc00; -fx-border-color: black; -fx-border-radius: 5;" text="TỔNG KẾT &amp; CHỐT SỔ (EOD)">
                <font><Font size="16.0" /></font>
            </Button>
            
            <Button onAction="#handleBackToMenu" prefHeight="60.0" prefWidth="200.0" text="QUAY LẠI MENU CHÍNH">
                <font><Font size="16.0" /></font>
            </Button>
        </HBox>
    </bottom>
</BorderPane>