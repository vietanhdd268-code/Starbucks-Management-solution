<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.starbucks.controller_fx.MainMenuController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="dateTimeLabel"
                       text="Loading Date..."
                       style="-fx-font-weight: bold; -fx-font-size: 14pt;"/>
            </children>
        </HBox>
    </top>

    <center>
        <GridPane hgap="40.0" vgap="40.0" alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Button onAction="#handleOpenPOS" prefHeight="100.0" prefWidth="200.0"
                    text="POS" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font size="24.0" /></font>
            </Button>

            <Button onAction="#handleCustomerClick" prefHeight="100.0" prefWidth="200.0"
                    text="CUSTOMER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <font><Font size="24.0" /></font>
            </Button>

            <Button onAction="#handleOpenReport" prefHeight="100.0" prefWidth="200.0"
                    text="CMS / THỐNG KÊ" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font size="18.0" /></font>
            </Button>

            <Button prefHeight="100.0" prefWidth="200.0"
                    text="Other function" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font><Font size="24.0" /></font>
            </Button>

            <Button onAction="#handleOpenEODHistory" prefHeight="100.0" prefWidth="200.0"
                    text="EOD HISTORY" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font><Font size="20.0" /></font>
            </Button>

            <Button fx:id="exitButton" onAction="#handleExitButton" prefHeight="100.0"
                    prefWidth="200.0" style="-fx-background-color: yellow;"
                    text="EXIT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <font><Font size="24.0" /></font>
            </Button>

        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="employeeNameLabel" text="" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
